<h1>Listing documents</h1>

<table>
  <tr>
    <th>Number of package</th>
    <th>Weight</th>
    <th>Volume</th>
    <th>Instructions</th>
    <th>Number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @documents.each do |document| %>
  <tr>
    <td><%= document.number_of_package %></td>
    <td><%= document.weight %></td>
    <td><%= document.volume %></td>
    <td><%= document.instructions %></td>
    <td><%= document.number %></td>
    <td><%= link_to 'Show', document %></td>
    <td><%= link_to 'Edit', edit_document_path(document) %></td>
    <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

